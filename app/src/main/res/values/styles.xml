<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryDark">@color/md_teal_700</item>
        <item name="colorAccent">@color/md_amber_500</item>
        <item name="android:navigationBarColor">@color/teal</item>
        <item name="android:statusBarColor">@color/teal</item>
    </style>

    <style name="AppThemeGrey" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/md_blue_grey_500</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_700</item>
        <item name="colorAccent">@color/md_green_500</item>
        <item name="android:navigationBarColor">@color/md_blue_grey_500</item>
        <item name="android:statusBarColor">@color/md_blue_grey_500</item>
    </style>

    <style name="ButtonStyleGlobal">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/press_animation</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="ButtonStyleGlobalMain">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/press_animation</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="InputStyleGlobal">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/layout_input</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="InputStyleGlobalLand">
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/layout_input</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40dp</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextGlobal">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextGlobalLand">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeader">
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextHeaderLand">
        <item name="android:textSize">70dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
